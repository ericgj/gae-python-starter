#!/usr/bin/env sh

rm -fr config/development
cp -r config/example config/development
. .env-dev/bin/activate && bin/projectid development ${1} > /dev/null && deactivate
bin/gen-config-secret > config/development/secret.yaml

rm -fr config/production
mkdir -p config/production
. .env-dev/bin/activate && bin/projectid production ${1} > /dev/null && deactivate
bin/gen-config-static ${1} > config/production/static.yaml
bin/gen-config-secret > config/production/secret.yaml

